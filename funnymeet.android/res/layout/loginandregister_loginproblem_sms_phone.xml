<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >

    <include
        android:id="@+id/login_titlebar"
        layout="@layout/somain_title" />

    <LinearLayout
        android:id="@+id/login_countryandregion"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/login_titlebar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/finditemstyle"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_countryandregion_text"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="国家和地区"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/login_country_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="中国"
            android:textColor="@color/loginandregister_region_color"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_divider"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/login_countryandregion"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffaaaaaa" />

    <LinearLayout
        android:id="@+id/login_phoneframe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/login_divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_regincode"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/input_bar_bg_normal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="+86"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/login_phone_frame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_bar_bg_normal"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/login_problem_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="false"
                android:digits="1234567890 "
                android:hint="你的手机号码"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/login_clear_phone_button"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/abc_ic_clear_search_api_holo_light"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>