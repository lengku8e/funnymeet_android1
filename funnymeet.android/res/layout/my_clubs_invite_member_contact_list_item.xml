<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/firstLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="A"
            android:textColor="#ff808080"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/addressBookDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="1dip"
            android:background="#ffaaaaaa"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/finditemstyle"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <com.mtcent.funnymeet.ui.view.control.LetterImageView
                android:id="@+id/letterImageView"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginRight="10dip"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/phoneContactName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="马化腾"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/phone_contact_be_isselected"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/selecter_selected_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/addressBookItemDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="1dip"
            android:background="#ffdddddd"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>