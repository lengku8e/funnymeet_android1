<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <include layout="@layout/somain_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_marginBottom="1dip"
        android:background="#ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/my_clubs_invitelink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/login_edittext_long_style"
            android:text="http://203.195.161.212:8080/basic/m/v.html?clubId="
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_marginBottom="1dip"
        android:background="#ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="6dip" >

            <TextView
                android:id="@+id/copylink"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/green_btn_style"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="复制链接"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/close_generatelink"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/copylink"
                android:background="@drawable/green_btn_style"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>