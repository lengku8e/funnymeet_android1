<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/finditemstyle"
        android:orientation="horizontal"
        android:padding="8dip" >

        <com.mtcent.funnymeet.ui.view.control.XVURLImageView
            android:id="@+id/hosterIcon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hosterName"
                    android:layout_width="0dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="3dip"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="锥子科技锥子科技锥子科技锥子科技锥子科技"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hoster_list_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:gravity="center_vertical"
                    android:text="9:40"
                    android:textColor="#ffaaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lastChat"
                    android:layout_width="0dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="罗永浩见面会明日举行罗永浩见面会明日举行罗永浩见面会明日举行"
                    android:textColor="#ffaaaaaa"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hoster_list_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center_vertical"
                    android:text="正在进行中"
                    android:textColor="#ffaaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>