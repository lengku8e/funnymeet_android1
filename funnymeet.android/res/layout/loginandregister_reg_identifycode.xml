<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <include layout="@layout/somain_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们已经发送了"
            android:textColor="#ffaaaaaa"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="#ff45c01a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到你的手机："
            android:textColor="#ffaaaaaa"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/reg_show_phone_regioncode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="+86"
            android:textColor="#ff808080"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_show_phone_phonesegment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="155"
            android:textColor="#ff808080"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_show_phone_prefour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="5555"
            android:textColor="#ff808080"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_show_phone_postfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="5555"
            android:textColor="#ff808080"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nicknameandphotoframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <LinearLayout
            android:id="@+id/nicknameframe"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:addStatesFromChildren="true"
            android:background="@drawable/login_edittext_long_style"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="验证码"
                android:textColor="#ff808080"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reg_smsidentifycode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:paddingLeft="50dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/reg_problems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:gravity="center"
        android:textColor="#ffaaaaaa"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reg_nextstep"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_btn_disable"
        android:clickable="true"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

</LinearLayout>