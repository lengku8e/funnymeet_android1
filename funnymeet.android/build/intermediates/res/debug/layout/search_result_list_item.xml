<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/finditemstyle"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <com.mtcent.funnymeet.ui.view.control.CustomImageView
            android:id="@+id/result_icon"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginRight="10dip"
            app:src="@drawable/defaultface"
            app:type="circle" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="我爱北京天安门"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/result_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:minLines="2"
                android:paddingRight="5dip"
                android:text="我爱北京天安门，天安门上太阳升;我爱北京天安门，天安门上太阳升;我爱北京天安门，天安门上太阳升;我爱北京天安门，天安门上太阳升;我爱北京天安门，天安门上太阳升"
                android:textColor="#ff808080"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#ffcccccc" />

</LinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/search_result_list_item.xml -->