<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/login_problem_dialog_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="206dp"
            android:background="#ffffffff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="确认手机号码"
                android:textColor="#ff45c01a"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ffaaaaaa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dip"
                    android:text="我们将发送验证码短信到这个号码："
                    android:textColor="#ff404040"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/login_problem_confirmphonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dip"
                    android:textColor="#ff404040"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffcccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/login_problem_phone_cancel"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/finditemstyle"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="取消"
                    android:textColor="#ff404040"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#ffcccccc" />

                <TextView
                    android:id="@+id/login_problem_phone_confirm"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/finditemstyle"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="确认"
                    android:textColor="#ff404040"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/login_problem_comfirmphone_dialog.xml -->