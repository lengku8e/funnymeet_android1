<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/switch_button"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="15dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/switch_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所有"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/abc_ic_go_search_api_holo_light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/monday"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="45dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/monday_monthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="04-07"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="一"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tuesday"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="45dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tuesday_monthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="04-07"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="二"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wendesday"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="45dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/wendesday_monthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="04-07"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="三"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thursday"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="45dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/thursday_monthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="04-07"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="四"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/friday"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="45dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/friday_monthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="04-07"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="五"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/saturday"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="45dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/saturday_monthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="04-07"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="六"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sunday"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/weekday_normal"
                    android:gravity="center"
                    android:minWidth="45dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/sunday_monthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="04-07"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="日"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:text="通知区域"
        android:textColor="#ff808080"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/hosterempty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="还未关注或者参与任何活动哦"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="进入俱乐部加入活动吧~"
            android:textColor="#cdcdcd" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/hosterlist"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#ffffffff"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="0px"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />

</LinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/hoster_list.xml -->