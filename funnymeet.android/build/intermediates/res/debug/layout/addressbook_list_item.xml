<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/firstLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="A"
            android:textColor="#ff808080"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/addressBookDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="1dip"
            android:background="#ffaaaaaa"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/finditemstyle"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <com.mtcent.funnymeet.ui.view.control.XVURLImageView
                android:id="@+id/userHeadImage"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginRight="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/userNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马化腾"
                android:textColor="#ff000000"
                android:textSize="16sp" />
        </LinearLayout>



        <TextView
            android:id="@+id/addressBookItemDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="1dip"
            android:background="#ffdddddd"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/addressbook_list_item.xml -->