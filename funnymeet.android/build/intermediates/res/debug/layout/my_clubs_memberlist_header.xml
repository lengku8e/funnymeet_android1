<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <LinearLayout
            android:id="@+id/my_clubs_assign_assistant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/finditemstyle"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/addfriend_icon_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择活动助理"
                android:textColor="#ff000000"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/member_seperator1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffcccccc" />

        <LinearLayout
            android:id="@+id/my_clubs_invite_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/finditemstyle"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/addfriend_icon_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请新会员"
                android:textColor="#ff000000"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/member_seperator2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffcccccc" />

        <LinearLayout
            android:id="@+id/my_clubs_check_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/finditemstyle"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/addfriend_icon_official" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核新会员"
                android:textColor="#ff000000"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/member_seperator3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffcccccc"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/starmember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/my_clubs_memberlist_header.xml -->