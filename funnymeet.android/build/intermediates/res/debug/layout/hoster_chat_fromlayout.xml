<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/chat_from_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.mtcent.funnymeet.ui.view.control.XVURLImageView
            android:id="@+id/chatFromHeadImage"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/chatFromMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="50dip"
            android:background="@drawable/chat_from_bg"
            android:gravity="center_vertical"
            android:text="我说，你们抄的挺像的啊 - -"
            android:textColor="#ff000000"
            android:textSize="14sp" />
    </LinearLayout>

