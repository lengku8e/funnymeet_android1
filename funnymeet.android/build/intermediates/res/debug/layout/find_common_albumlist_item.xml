<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finditemstyle"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp" >

            <com.mtcent.funnymeet.ui.view.control.XVURLImageView
                android:id="@+id/albumCover"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/albumbase"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/preview" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/albumName"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:text="地点图片"
                    android:textColor="#ff303030"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numsOfAlbum"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="294"
                android:textColor="#ff000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/find_common_albumlist_item.xml -->