<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <include layout="@layout/somain_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:background="#ffffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/finditemstyle"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="俱乐部标志"
                        android:textColor="#ff000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/my_clubs_modify_fakeicon"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:layout_gravity="right"
                        android:background="#ffa3d3ec"
                        android:scaleType="centerInside"
                        android:src="@drawable/com_tencent_qqpicshow" />

                    <com.mtcent.funnymeet.ui.view.control.XVURLImageView
                        android:id="@+id/my_clubs_modify_realicon"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#ffcccccc" />

                <LinearLayout
                    android:id="@+id/to_change_club_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/finditemstyle"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="俱乐部名称"
                        android:textColor="#ff000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/club_detail_clubname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dip"
                        android:gravity="center_vertical"
                        android:text="活动·大连"
                        android:textColor="#ff808080"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#ffcccccc" />

                <LinearLayout
                    android:id="@+id/my_clubs_clubinfo_simple_clubqrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/finditemstyle"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="二维码名片"
                        android:textColor="#ff000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/club_detail_setting_smallicon_qr"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginRight="10dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/setting_smallicon_qr" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#ffcccccc" />

                <LinearLayout
                    android:id="@+id/to_club_type_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/finditemstyle"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="类型"
                        android:textColor="#ff000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/club_detail_clubtype"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dip"
                        android:gravity="center_vertical"
                        android:text="私人俱乐部"
                        android:textColor="#ff808080"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#ffcccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/finditemstyle"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="大小"
                        android:textColor="#ff000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/club_setting_member_size"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dip"
                        android:gravity="center_vertical"
                        android:text="40人俱乐部"
                        android:textColor="#ff808080"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="#ffffffff"
                android:visibility="gone"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/nickModify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="可公开搜索"
                        android:textColor="#ff000000"
                        android:textSize="16sp" />

                    <ToggleButton
                        android:id="@+id/mTogBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:button="@drawable/checkbox_iphone"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/exit_club"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dip"
                android:background="@drawable/red_btn_style"
                android:clickable="true"
                android:gravity="center"
                android:text="解散俱乐部"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/my_clubs_clubinfo_simple.xml -->