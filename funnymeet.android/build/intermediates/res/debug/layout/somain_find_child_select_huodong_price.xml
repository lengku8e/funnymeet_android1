<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#ebebeb"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/praicinterval"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="价格区间"
            android:textColor="#282828"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/praiccustom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="自定义"
            android:textColor="#282828"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/praicintervalList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#ffeeeeee"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dip"
            android:footerDividersEnabled="false"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:transcriptMode="disabled" >
        </ListView>

        <RelativeLayout
            android:id="@+id/praiccustomLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:visibility="gone" >

            <EditText
                android:id="@+id/lowPrice"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pricerange"
                android:hint="最低价格"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lowPrice"
                android:layout_toRightOf="@+id/lowPrice"
                android:text="元"
                android:textColor="#ff808080"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/hightPrice"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_below="@+id/lowPrice"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:digits="0123456789"
                android:layout_marginRight="10dp"
                android:background="@drawable/pricerange"
                android:hint="最高价格"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/hightPrice"
                android:layout_toRightOf="@+id/hightPrice"
                android:text="元"
                android:textColor="#ff808080"
                android:textSize="14sp" />

            <Button
                android:id="@+id/priceButton"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/hightPrice"
                android:layout_below="@+id/hightPrice"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginandregister_loginbuttonstyle"
                android:text="完成"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/somain_find_child_select_huodong_price.xml -->