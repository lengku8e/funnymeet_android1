<?xml version="1.0" encoding="utf-8"?>
<com.mtcent.funnymeet.ui.view.layout.InputChangeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <include layout="@layout/somain_title" />

    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#80eeeeee"
        android:fadingEdge="none" >

        <LinearLayout
            android:id="@+id/hoster_chat_MainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="20dip" >

            <include layout="@layout/hoster_chat_fromlayout" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffaaaaaa" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="8dip"
            android:paddingTop="8dip" >

            <TextView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@drawable/chatting_setmode_voice_btn"
                android:clickable="true" />

            <com.mtcent.funnymeet.ui.view.control.CEditTextView
                android:id="@+id/chat_content"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:background="@drawable/login_edittext_long_style"
                android:paddingBottom="2dip"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/type_select_btn"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@drawable/type_select_btn"
                android:clickable="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/chat_sent_btn"
                android:layout_width="42dip"
                android:layout_height="32dip"
                android:background="@drawable/sent_btn_style"
                android:clickable="true"
                android:gravity="center"
                android:text="发送"
                android:textColor="#ff808080"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <com.mtcent.funnymeet.ui.view.control.AutoGridView
                android:id="@+id/toolsPanel"
                android:layout_width="280dip"
                android:layout_height="210dip"
                android:layout_marginTop="10dip"
                android:background="#ffffffff"
                android:cacheColorHint="@android:color/transparent"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dip"
                android:horizontalSpacing="10dip"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:transcriptMode="disabled"
                android:verticalSpacing="5dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</com.mtcent.funnymeet.ui.view.layout.InputChangeLinearLayout><!-- From: file:/C:/xiangmu/funnymeet_android/funnymeet.android/res/layout/hoster_list_chat_activity.xml -->